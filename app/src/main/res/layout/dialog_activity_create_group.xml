<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DialogActivity.StuCreateDialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新建小组"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/dialog_group_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#434141"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/dialog_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入小组名"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="对外权限"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:paddingLeft="5dp"/>

    <RadioGroup
        android:id="@+id/dialog_group_mode_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <RadioButton
            android:id="@+id/dialog_group_mode_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="公开"/>
        <RadioButton
            android:id="@+id/dialog_group_mode_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="隐藏"/>
        <RadioButton
            android:id="@+id/dialog_group_mode_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="密码模式"/>
    </RadioGroup>

    <EditText
        android:id="@+id/dialog_group_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/dialog_create_group"
        android:background="@drawable/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="现在创建"
        android:textSize="15sp"
        android:textColor="#f1f0f0"/>

</LinearLayout>
