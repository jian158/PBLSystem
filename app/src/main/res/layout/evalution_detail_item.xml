<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="#dd81818e"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="7dp"
    android:paddingBottom="7dp">
    <ImageView
        android:id="@+id/class_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/score_detail"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/class_image"
        android:paddingLeft="10dp"
        android:text="分值"
        android:textSize="18sp"
        android:textColor="#3cd63c"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/time"
        android:textSize="16sp"
        android:text="111"
        android:layout_above="@+id/suggestion"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true" />
    <TextView
        android:id="@+id/suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_toRightOf="@+id/class_image"
        android:layout_toLeftOf="@+id/comment_time"
        android:paddingLeft="10dp"
        android:textColor="#cac423"
        android:text="建议: 无"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:text="举报"
        android:textSize="16sp"
        android:textColor="#dbdadd"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>