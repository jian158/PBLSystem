<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/my_group_item"
                android:layout_marginBottom="0dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apply"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_marginLeft="25dp"
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textColor="#dada20"
        android:layout_toRightOf="@+id/image"
        />
    <TextView
        android:id="@+id/prompt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_text_view"
        android:text="请求加入该组"
        android:layout_alignLeft="@id/user_name_text_view"
        android:textColor="#e76884b2"/>
    <TextView
        android:id="@+id/apply_item_extra_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prompt_label"
        android:text="附加信息：无"
        android:layout_alignLeft="@id/user_name_text_view"
        android:textColor="#917c7c"/>


    <TextView
        android:id="@+id/create_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/agree_apply_btn"
        android:text="无"
        android:textColor="#dad4d4"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/agree_apply_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="同意"
        android:textColor="#ffffff"
        android:background="#366193"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>