<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pblsystem.Activity.CreateClass">
    <EditText
        android:id="@+id/class_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="课堂名称"
        android:gravity="center"
        android:textColorHint="#9f9b9b"
        android:maxLines="2"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        />


    <Button
        android:id="@+id/create_new_class_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="开始新建"
        android:layout_below="@+id/class_name_et"
        android:textSize="20sp"
        android:textColor="#f1f0f0"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/chooseOtherClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择代理其他课堂"
        android:layout_below="@+id/create_new_class_btn"
        android:textSize="15sp"
        android:textColor="#5ea1b4"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
