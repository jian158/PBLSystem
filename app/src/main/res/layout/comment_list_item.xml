<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="2dp"
    android:background="#e8e5e5">
    <com.example.pblsystem.Class.XCRoundImageView
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:padding="4dp"
        android:textColor="#383636"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/like_black"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回复人"
        android:textColor="#4351bc"
        android:layout_toRightOf="@+id/image"
        android:layout_marginTop="3dp"
        android:paddingLeft="4dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner"
        android:text="发布于2017年5月1日 4:22"
        android:textSize="13sp"
        android:textColor="#a09f9b"
        android:layout_toRightOf="@+id/image"
        android:paddingTop="5dp"
        android:paddingLeft="4dp"/>


    <TextView
        android:id="@+id/target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#a5a4a4"
        android:background="#ffffff"
        android:textSize="16sp"
        android:layout_below="@+id/content"
        android:layout_toRightOf="@+id/image"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复内容"
        android:textColor="#393838"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/image"
        android:layout_below="@+id/time"
        android:paddingTop="5dp"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/image"
        android:background="#d5d4d4"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>