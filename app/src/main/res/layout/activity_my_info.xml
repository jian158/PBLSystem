<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pblsystem.Activity.MyClassRoomInfo">

    <com.example.pblsystem.Class.XCRoundImageView
        android:id="@+id/head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/photo"/>

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/username_label"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:textSize="16sp"
            android:text="用户名："
            android:textColor="#6e6d6d" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/username_label"
            android:textSize="16sp"
            android:gravity="right"
            android:textColor="#323a93"/>
        <TextView
            android:id="@+id/first_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebe6e6"
            android:layout_below="@+id/username_label"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/name_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="姓名："
            android:textColor="#6e6d6d"
            android:layout_below="@+id/first_divider"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_label"
            android:layout_below="@+id/first_divider"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="#323a93"/>
        <TextView
            android:id="@+id/second_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebe6e6"
            android:layout_below="@+id/name"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/class_room_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="课堂："
            android:textColor="#6e6d6d"
            android:layout_below="@+id/second_divider"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/class_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/class_room_label"
            android:layout_below="@+id/second_divider"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#323a93"/>
        <TextView
            android:id="@+id/third_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebe6e6"
            android:layout_below="@+id/class_room"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="手机号："
            android:textColor="#6e6d6d"
            android:layout_below="@+id/third_divider"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/class_room_label"
            android:layout_below="@+id/third_divider"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="16sp"
            android:textColor="#323a93"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/fourth_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebe6e6"
        android:layout_below="@+id/info_layout"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/fifth_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebe6e6"
        android:layout_below="@+id/question"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ebeaea"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:text="修改密码"
        android:textColor="#6e6d6d"
        android:layout_below="@+id/fifth_divider"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/six_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebe6e6"
        android:layout_below="@+id/password"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ebeaea"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:text="绑定邮箱"
        android:textColor="#6e6d6d"
        android:layout_below="@+id/six_divider"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/seven_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebe6e6"
        android:layout_below="@+id/password"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ebeaea"
        android:textSize="16sp"
        android:gravity="left|center_vertical"
        android:text="设置密保"
        android:textColor="#6e6d6d"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/fourth_divider"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>