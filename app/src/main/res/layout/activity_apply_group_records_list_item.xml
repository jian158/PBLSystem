<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:background="#afaeae"
              android:layout_marginBottom="0dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/record_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:text="无"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:id="@+id/target_group_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组名"
        android:textColor="#288335"
        android:layout_toRightOf="@+id/record_sort"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="无"
        android:textColor="#732188"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/create_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="无"
        android:textColor="#e6e7e9"
        android:layout_below="@+id/result_text_view"/>
</RelativeLayout>