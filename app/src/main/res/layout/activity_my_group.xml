<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">
    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小组信息"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/config_my_group_info_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/config"
        android:layout_marginRight="10dp"/>

    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3dfdf"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/head"/>
    <LinearLayout
        android:id="@+id/group_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/first_divider"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="小组名"/>

        <TextView
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/second_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3dfdf"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/group_name_layout"/>

    <LinearLayout
        android:id="@+id/group_leader_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/second_divider"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="小组长"/>

        <TextView
            android:id="@+id/group_leader_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <View
        android:id="@+id/third_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3dfdf"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/group_leader_name_layout"/>

    <LinearLayout
        android:id="@+id/group_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/third_divider"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="小组人数"/>

        <TextView
            android:id="@+id/group_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <View
        android:id="@+id/fourth_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3dfdf"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/group_number_layout"/>

    <TextView
        android:id="@+id/group_member"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="小组成员"
        android:layout_below="@+id/fourth_divider"
        android:layout_marginTop="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_member_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_member"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>


    <Button
        android:id="@+id/exit_group_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出小组"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_exit"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
</RelativeLayout>