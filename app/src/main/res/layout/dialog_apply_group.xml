<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".DialogActivity.StuCreateDialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小组信息"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/dialog_apply_group_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#434141"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小组名:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/dialog_apply_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="无"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小组长:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="5dp"/>
        <TextView
            android:id="@+id/dialog_apply_group_leader_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="无"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>




    <EditText
        android:id="@+id/dialog_apply_group_extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="申请说明(非必填)"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/dialog_join_group_btn"
        android:background="@drawable/dialog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="申请加入"
        android:textSize="15sp"
        android:textColor="#f1f0f0"/>

</LinearLayout>
