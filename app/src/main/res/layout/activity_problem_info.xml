<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课题详情"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>


    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80acd5"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/head"/>
    <LinearLayout
        android:id="@+id/problem_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/first_divider"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="标题"/>
        <TextView
            android:id="@+id/problem_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/second_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d1d1"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/problem_title_layout"/>

    <LinearLayout
        android:id="@+id/problem_introduction_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/second_divider"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="简介"/>
        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/third_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d1d1"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/problem_introduction_layout"/>

    <LinearLayout
        android:id="@+id/problem_difficuty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/third_divider"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="题目难度"/>
        <TextView
            android:id="@+id/apply_extra_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/fourth_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d1d1"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/problem_difficuty_layout"/>

    <LinearLayout
        android:id="@+id/problem_show_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/fourth_divider"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="演讲时间"/>
        <TextView
            android:id="@+id/apply_time_info_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>



    <Button
        android:id="@+id/apply_problem_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="申请课题"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
</RelativeLayout>
