<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="3dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/group_list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/group_blue"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/group_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/group_list_image"
        android:paddingLeft="10dp"
        android:text="小组信息"
        android:textSize="16sp"
        android:textColor="#474444"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/group_list_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20人"
        android:textSize="16sp"
        android:textColor="#474444"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/group_list_item_lock"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/group_list_item_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_bright"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>